<div class="column is-half">
  <% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.email) %>
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'posts/form' %>
		</div>
	</article>
  <% end %>


<% @posts.each do | post | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(post.user.email, size: 64, alt: post.user.email) %>
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<small><%= post.user.username %></small><br/>
  				<p><%= post.post %></p>
  			</div>
        <% if user_signed_in? && current_user.id == post.user_id %>
  			<nav class="level">
  				<div class="level-left is-mobile">
						
  					<%= link_to post, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>

  					<%= link_to edit_post_path(post), class: "level-item ml-2" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>

  					<%= form_tag post, method: :delete do %>
  						<%= button_tag class: "no-button", data: { confirm: "Are you sure you want to delete this post?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  						<% end %>
  					<% end %>

  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>
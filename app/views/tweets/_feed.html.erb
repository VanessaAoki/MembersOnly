<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
        <p class="image is-32x32">
            <img src="./emmy.jpg">
        </p>   
    </figure>
    <div class="media-content">
       <%= render 'tweets/form'%>
    </div>
  </article>

<% @tweets.each do |tweet|%>
 <div class="box">
    <article class="media">
        <div class="media-left">
            <figure class="image is-64x64">
                <img src="./emmy.jpg">
            </figure>
        </div>
       <div class="media-content">
            <div class="content">
                <strong>Emmy Nsabimana </strong><br/>
                <small>@emmyn5600</small><br/>
                <p><%= tweet.tweet%></p>
            </div>
           <nav class="level">
             <div class="level-left is-mobile">
                <%= link_to tweet, class:'level-item' do%>
                    <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
                <% end %>

                <%= link_to edit_tweet_path(tweet), class:'level-item' do%>  
                    <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
                <%end %> 

                <%= link_to tweet, method: :delete, data:{confirm:"Are you sure you want to delete this tweet?"} do %>
                     <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
                <%end %>
             </div>
           </nav>
       </div>
   </article>
 </div>
<% end %>
</div>